{
  "name": "node-hexagonal-openai",
  "version": "1.0.0",
  "description": "Node.js Hexagonal Architecture with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:unit": "jest --testMatch='**/unit/**/*.test.ts'",
    "test:component": "jest --testMatch='**/component/**/*.test.ts'",
    "test:e2e": "jest --testMatch='**/e2e/**/*.test.ts'",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "node",
    "typescript",
    "hexagonal",
    "clean-architecture"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
